{
  "name": "mdv-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "prebuild": "npm run types:api",
    "start": "next start -p 3000",
    "start:prod": "PORT=${PORT:-3000} next start -p $PORT",
    "lint": "next lint",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:install-browsers": "npx playwright install --with-deps",
    "types:api": "openapi-typescript ../docs/api-contracts.yaml -o ./lib/generated/api.d.ts"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3",
    "next": "14.2.6",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "1.47.2",
    "@types/node": "20.14.10",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.6",
    "openapi-typescript": "6.7.5",
    "postcss": "8.4.40",
    "tailwindcss": "3.4.9",
    "typescript": "5.5.4"
  }
}
